{
  "name": "create-fs-app",
  "version": "2.0.0",
  "description": "A CLI tool to create customizable full-stack monorepo applications",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "lint": "eslint . --ext .ts --max-warnings 200",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "postbuild": "chmod +x dist/index.js",
    "prepublishOnly": "npm run build",
    "size": "npm pack --dry-run 2>&1 | grep -E 'package size|Tarball Contents'",
    "size:full": "npm pack --dry-run",
    "analyze": "node scripts/package-info.js",
    "release:patch": "npm version patch -m 'Release v%s' && npm publish && git push --follow-tags",
    "release:minor": "npm version minor -m 'Release v%s' && npm publish && git push --follow-tags",
    "release:major": "npm version major -m 'Release v%s' && npm publish && git push --follow-tags",
    "release:check": "npm run build && npm pack --dry-run",
    "release:test": "npm run build && npm pack && echo 'Test the .tgz file before publishing'"
  },
  "keywords": [
    "full-stack",
    "monorepo",
    "turborepo",
    "nx",
    "react",
    "next.js",
    "express",
    "nest.js",
    "typescript",
    "cli",
    "scaffolding",
    "boilerplate"
  ],
  "author": "Om Jannu",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Om-jannu/create-fs-app.git"
  },
  "bugs": {
    "url": "https://github.com/Om-jannu/create-fs-app/issues"
  },
  "homepage": "https://github.com/Om-jannu/create-fs-app#readme",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "figlet": "^1.9.3",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0",
    "prompts": "^2.4.2",
    "update-notifier": "^7.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@types/prompts": "^2.4.9",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
